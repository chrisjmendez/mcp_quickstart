# Dockerfile.mcp
FROM python:3.11-slim

RUN apt-get update && apt-get install -y \
    sqlite3 \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app
RUN chmod +x entrypoint.sh

ENTRYPOINT ["./entrypoint.sh"]